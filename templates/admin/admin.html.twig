{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}

    <div class="row justify-content-center mt-4">
        <h4>Administration du site</h4>
    </div>
    <div class="row">
        <div class="col-6 text-center">
            <div class="card bg-light mb-3" style="max-width: 40rem;">
                <div class="card-header"><strong>Fiches joueurs et encadrements</strong></div>
                <div class="card-body">
                    <a href="{{ path('admin_staff_new') }}" class="btn btn-sm btn-success" role="button">Nouveau joueur ou encadrant</a>
                    <form>
                        <div class="form-row align-items-center">
                            <div class="col-auto my-1">
                                <label class="mr-sm-2 sr-only" for="inlineFormCustomSelect">staff</label>
                                <select class="custom-select mr-sm-2" id="inlineFormCustomSelect">
                                    <option selected>Choisissez un joueur ou encadrant</option>
                                        <option>{% for name in staff %}{{ staff.name }}{% endfor %}</option>
                                </select>
                            </div>
                            <div class="col-auto my-1">
                                <button type="submit" class="btn btn-primary">Modifier</button>
                            </div>
                        </div>
                    </form>

                    <button type="submit" class="btn btn-sm btn-success">Supprimer</button>
                </div>
            </div>
        </div>
        <div class="col-6 text-center">
            <div class="card bg-light mb-3" style="max-width: 18rem;">
                <div class="card-header"><strong>Convocation</strong></div>
                <div class="card-body">
                    <button type="submit" class="btn btn-sm btn-success">Nouvelle convocation</button>

                    <button type="submit" class="btn btn-sm btn-success">Modifier</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6 text-center">
            <div class="card bg-light mb-3" style="max-width: 18rem;">
                <div class="card-header"><strong>Matchs</strong></div>
                <div class="card-body">
                    <button type="submit" class="btn btn-sm btn-success">Nouveau match</button>

                    <button type="submit" class="btn btn-sm btn-success">Mettre à jour le résultat</button>
                </div>
            </div>
        </div>
        <div class="col-6 text-center">
            <div class="card bg-light mb-3" style="max-width: 18rem;">
                <div class="card-header"><strong>Classement</strong></div>
                <div class="card-body">
                    <button type="submit" class="btn btn-sm btn-success">Mettre à jour le classement</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
