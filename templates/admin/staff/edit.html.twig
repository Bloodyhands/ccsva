{% extends 'base.html.twig' %}

{% block title %}Modification de {{ staff.firstname}} {{ staff.name }}{% endblock %}

{% block body %}
    <div class="row justify-content-center mt-4 mb-4">
        <div class="col-10 offset-0 col-md-10 offset-md-1 text-center">
            <h4>Modification de {{ staff.firstname }} {{ staff.name }}</h4>
        </div>
        <div class="col-2 col-md-1">
            <a href="{{ path('admin_staff_delete', {'id': staff.id}) }}" class="btn btn-sm btn-danger" role="button"><i class="fas fa-trash-alt"></i></a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-10 col-md-6 col-lg-4">
            {{ form_start(form) }}
            {{ form_widget(form) }}
        </div>
    </div>
    <div class="row justify-content-center mt-3">
        <div class="col-4 text-center" id="modif">
            <button type="submit" class="btn btn-primary">Modifier la fiche du joueur ou encadrement</button>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}