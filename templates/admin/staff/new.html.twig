            {{ form_row(form.email) }}
            {{ form_row(form.birthdate) }}
            {{ form_row(form.position) }}
        </div>
    </div>
    <div class="row justify-content-center mt-3">
        <button type="submit" class="btn btn-success">Cr√©er la fiche du joueur ou encadrant</button>
    </div>
    {{ form_end(form) }}
