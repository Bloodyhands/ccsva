{% extends 'base.html.twig' %}

{% block title %}Ajout des joueurs et encadrants{% endblock %}

{% block body %}

    <div class="row justify-content-center mt-4">
        <h4>Ajout des joueurs et encadrants</h4>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-10 col-md-6 col-lg-4">
            {{ form_start(form) }}

            {{ form_row(form.name) }}
