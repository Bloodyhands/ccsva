<div class="col-4 offset-2 text-center">
    <div class="card bg-light mb-3" style="max-width: 35rem;">
        <div class="card-header"><strong>Matchs</strong></div>
        <div class="card-body">
            <div class="row justify-content-center mt-2 mb-3">
                <div class="col-8">
                    <button type="submit" class="btn btn-success">Nouveau match</button>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-5">
                    {{ form_start(formMatch) }}
                    {{ form_widget(formMatch) }}
                </div>
                <div class="col-1">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-edit"></i></button>
                </div>
                {{ form_end(formMatch) }}
            </div>
        </div>
    </div>
</div>